@{
    ViewData["Title"] = "Login";
}
@model UserLoginVM
<div class="breadcrumb-area breadcrumb-height"
     data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
    <div class="container h-100">
        <div class="row h-100">
            <div class="col-lg-12">
                <div class="breadcrumb-item">
                    <h2 class="breadcrumb-heading">Login Page</h2>
                    <ul>
                        <li>
                            <a href="index.html">Home</a>
                        </li>
                        <li>Login</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="login-register-area section-space-y-axis-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 pt-5 pt-lg-0">
                <form method="post">
                    <div class="login-form">
                        <h4 class="login-title">Login</h4>
                        <div class="row">
                            <div class="col-md-6 col-12">
                            <div class="col-md-6 col-12">
                                <label asp-for="UsernameOrEmail"></label>
                                    <input asp-for="UsernameOrEmail" placeholder="UsernameOrEmail" />
                                    <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="IsPersistance">Remember Me</label>
                                    <input asp-for="IsPersistance" />
                                    <span asp-validation-for="IsPersistance" class="text-danger"></span>
                            </div>
                            <div asp-validation-summary="ModelOnly"></div>
                            <a asp-action="Register" >Do you need Account?</a>
                            <div class="col-12">
                                <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                    Login
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

