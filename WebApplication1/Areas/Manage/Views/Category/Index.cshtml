
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Category>
@*@model IEnumerable<Product>*@
<div class="container">
    <a class="btn btn-primary my-3" asp-action="Create">Create</a>
    <div class="card mt-5">
        <div class="table-responsive table-bordered">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Photo</th>
                        <th colspan="2">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td><img width="40" src="@item.Photo"/></td>
                        <td>@item.Photo</td>
                        <td><a class="btn btn-danger" asp-area="Manage" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                        <td><a class="btn btn-info" asp-area="Manage" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

